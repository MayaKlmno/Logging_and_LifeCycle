<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFB0B0"
    android:backgroundTint="#E9B7B7"
    tools:context=".MainActivity">

    <Chronometer
        android:id="@+id/chronometer_mainActivity_stopwatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/button_mainActivity_startStop"
        android:layout_width="125dp"
        android:layout_height="80dp"
        android:backgroundTint="#AA5353"
        android:fontFamily="@font/chango"
        android:text="Start"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_mainActivity_reset"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chronometer_mainActivity_stopwatch"
        app:layout_constraintVertical_bias="0.32" />

    <Button
        android:id="@+id/button_mainActivity_reset"
        android:layout_width="120dp"
        android:layout_height="79dp"
        android:backgroundTint="#AA5353"
        android:fontFamily="@font/chango"
        android:text="Reset"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_mainActivity_startStop"
        app:layout_constraintTop_toBottomOf="@+id/chronometer_mainActivity_stopwatch"
        app:layout_constraintVertical_bias="0.323" />

</androidx.constraintlayout.widget.ConstraintLayout>